{
    "manifest_version": 3,
    "name": "Mobile Device Preview Tool",
    "version": "1.0.0",
    "description": "Professional mobile device simulator for web development",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "preview.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}